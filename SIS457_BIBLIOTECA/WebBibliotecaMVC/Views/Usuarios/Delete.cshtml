@model WebBibliotecaMVC.Models.Usuario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="container-xxl py-6" style="background-color: black">
    <div class="container">
        <div class="row g-4">
            <h1 style="color: white">Eliminar</h1>

            <h3 style="color: white">¿Está seguro que desea eliminar el usuario?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2" style="color: #EAA636">Usuario</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.Usuario1)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Usuario Registro</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.UsuarioRegistro)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Fecha Registro</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Estado</dt>
                    <dd class="col-sm-10" style="color: white">
                        @(Model.Estado == 1 ? "Activo" : "Inactivo")
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Empleado</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.IdEmpleadoNavigation.Nombre)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdUsuario" />
                    <input type="submit" style="color: black" value="Eliminar" class="btn btn-danger" /> |
                    <a asp-action="Index">Volver a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>
