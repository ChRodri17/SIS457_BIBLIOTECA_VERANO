@model WebBibliotecaMVC.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="container-xxl py-6" style="background-color: black">
    <div class="container">
        <div class="row g-4">
            <h1 style="color: white">Detalles del Usuario</h1>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2" style="color: #EAA636">Usuario</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.Usuario1)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Usuario Registro</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.UsuarioRegistro)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Fecha Registro </dt>
                    <dd class="col-sm-10" style="color: white">
                        @Model.FechaRegistro.ToLongDateString() @Model.FechaRegistro.ToShortTimeString()
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Estado</dt>
                    <dd class="col-sm-10" style="color: white">
                        @(Model.Estado == 1 ? "Activo" : "Inactivo")
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Nombre Completo</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Model.IdEmpleadoNavigation.Nombre @Model.IdEmpleadoNavigation.ApellidoMaterno
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.IdUsuario">Editar</a> |
                <a asp-action="Index">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdUsuario">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
