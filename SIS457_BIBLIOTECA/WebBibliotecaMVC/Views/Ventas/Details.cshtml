@model WebBibliotecaMVC.Models.Venta

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-xxl py-6" style="background-color: black">
    <div class="container">
        <div class="row g-4">
            <h1 style="color: white">Detalles de Ventas</h1>

            <div>
                <h4>Venta</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2" style="color: #EAA636">Total de Venta</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.TotalVenta)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Fecha de Venta</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.FechaVenta)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Usuario Registro</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.UsuarioRegistro)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Fecha de Registro</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Estado</dt>
                    <dd class="col-sm-10" style="color: white">
                        @(Model.Estado == 1 ? "Activo" : "Inactivo")
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Cliente</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.IdClienteNavigation.RazonSocial)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Usuario</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.IdUsuarioNavigation.Usuario1)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
                <a asp-action="Index">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
