@model WebBibliotecaMVC.Models.Venta

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-xxl py-6" style="background-color: black">
    <div class="container">
        <div class="row g-4">
            <h1 style="color: white">Crear Venta</h1>

            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Usuario</label>
                            <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Cliente</label>
                            <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Total de Venta</label>
                            <input asp-for="TotalVenta" class="form-control" />
                            <span asp-validation-for="TotalVenta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Fecha de Venta</label>
                            <input asp-for="FechaVenta" class="form-control" />
                            <span asp-validation-for="FechaVenta" class="text-danger"></span>
                        </div><br />
                        <div class="form-group">
                            <input type="submit" style="color: black" value="Crear" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


