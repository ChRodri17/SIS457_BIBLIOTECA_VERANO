@model IEnumerable<WebBibliotecaMVC.Models.Venta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-6" style="background-color: black">
    <div class="container">
        <div class="row g-4">
            <h1 style="color: white">Crear Venta</h1>

            <p>
                <a asp-action="Create">Crear Nuevo</a>
            </p>
            <table class="table">
                <thead style="color: #EAA636">
                    <tr>
                        <th>Total de Venta</th>
                        <th>Fecha de Venta</th>
                        <th>Usuario Registro</th>
                        <th>Fecha de Registro</th>
                        @* <th>Estado</th> *@
                        <th>Cliente</th>
                        <th>Usuario</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody style="color: white">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalVenta)
                            </td>
                            <td>
                                @item.FechaVenta.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsuarioRegistro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaRegistro)
                            </td>
                            @*             <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                        </td> *@
                            <td>
                                @Html.DisplayFor(modelItem => item.IdClienteNavigation.RazonSocial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Usuario1)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ver"><i class="fas fa-eye me-2"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editar"><i class="fas fa-edit me-2"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Eliminar"><i class="fas fa-trash me-2"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
