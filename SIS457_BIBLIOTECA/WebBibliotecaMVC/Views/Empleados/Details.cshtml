@model WebBibliotecaMVC.Models.Empleado

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-xxl py-6" style="background-color: black">
    <div class="container">
        <div class="row g-4">
            <h1 style="color: white">Detalles del Empleado</h1>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2" style="color: #EAA636">Nombre</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Apellidos</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.Apellidos)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Telefono</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Cargo</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.Cargo)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Salario</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.Salario)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Usuario Registro</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Html.DisplayFor(model => model.UsuarioRegistro)
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Fecha de Registro</dt>
                    <dd class="col-sm-10" style="color: white">
                        @Model.FechaRegistro.ToLongDateString() @Model.FechaRegistro.ToShortTimeString()
                    </dd>
                    <dt class="col-sm-2" style="color: #EAA636">Estado</dt>
                    <dd class="col-sm-10" style="color: white">
                        @(Model.Estado == 1 ? "Activo" : "Inactivo")
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.IdEmpleado">Editar</a> |
                <a asp-action="Index">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>
