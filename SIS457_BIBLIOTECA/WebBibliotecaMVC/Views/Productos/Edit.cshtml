@model WebBibliotecaMVC.Models.Producto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-xxl py-6" style="background-color: black">
    <div class="container">
        <div class="row g-4">
            <h1 style="color: white">Editar Producto</h1>

            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdProducto" />
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Categoria</label>
                            <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                            <span asp-validation-for="IdCategoria" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Código</label>
                            <input asp-for="Codigo" class="form-control" />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Descripción</label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Precio</label>
                            <input asp-for="Precio" class="form-control" type="number" step="0.01    />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="UsuarioRegistro" />
                        <input type="hidden" asp-for="FechaRegistro" />
                        <div class="form-group">
                            <label class="control-label" style="color: #EAA636">Estado</label>
                            <select asp-for="Estado" class="form-select">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div><br />
                        <div class="form-group">
                            <input type="submit" style="color: black" value="Guardar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}